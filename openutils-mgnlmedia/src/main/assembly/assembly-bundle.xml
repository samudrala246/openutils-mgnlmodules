<assembly>
  <id>for-magnolia-4.5-bundle</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <filtered>true</filtered>
      <outputDirectory>/</outputDirectory>
      <lineEnding>crlf</lineEnding>
      <directory>${basedir}/src/main/bundle</directory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>/sources/</outputDirectory>
      <includes>
        <include>src/**/*</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>com.drewnoakes:metadata-extractor</include>
        <include>net.sourceforge.openutils:*</include>
        <include>com.google.collections:*</include>
        <include>org.apache.pdfbox:*</include>
        <include>com.flazr:flazr:*</include>
        <include>commons-cli:commons-cli:*</include>
        <include>org.jboss.netty:netty:*</include>
        <include>nl.ikarus.nxt.priv.imageio.icoreader:*</include>
        <include>org.freehep:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>